{
  "name": "top-active-whatsapp",
  "version": "2.0.0",
  "description": "WhatsApp Automation Platform - Desktop App with Electron",
  "main": "app-launcher.js",
  "bin": "app-launcher.js",
  "homepage": "./",
  "scripts": {
    "start": "node server.js",
    "dev": "npm run start",
    "push": "node scripts/push-to-github.js",
    "backend": "nodemon server.js",
    "electron": "electron .",
    "electron-dev": "concurrently \"cd frontend && npm run dev\" \"wait-on http://localhost:5173 && npm run electron\"",
    "electron-build": "npm run build:frontend && npm run build:electron",
    "build:frontend": "cd frontend && npm run build",
    "build:electron": "electron-builder --publish never",
    "cleanup": "node scripts/cleanup-chrome.js",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "db:init": "node scripts/init-db.js",
    "chatbot:init": "node scripts/init-chatbot-config.js",
    "chatbot:seed-templates": "node scripts/seed-chatbot-templates.js",
    "test": "jest",
    "seed": "node seeds/seed.js",
    "build:exe": "pkg package.json",
    "dist": "npm run build:exe"
  },
  "pkg": {
    "assets": [
      "frontend/**/*",
      "services/**/*",
      "routes/**/*",
      "middleware/**/*",
      "config/**/*",
      "controllers/**/*",
      "scripts/**/*",
      "docker-compose.yml",
      ".env.example",
      "sql/**/*",
      "electron-main.js",
      "preload.js",
      "launcher.js",
      "server.js",
      "node_modules/electron/**/*"
    ],
    "targets": [
      "node18-win-x64"
    ],
    "icon": "icon.ico",
    "output": "TopActiveWhatsApp"
  },
  "keywords": [
    "whatsapp",
    "automation",
    "api",
    "chatbot",
    "crm"
  ],
  "author": "JT DEV NOCODE",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@supabase/supabase-js": "^2.90.1",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "bull": "^4.11.5",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "electron-is-dev": "^3.0.1",
    "express": "^4.22.1",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.0.0",
    "googleapis": "^144.0.0",
    "helmet": "^7.2.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.3",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.2",
    "openai": "^4.104.0",
    "pg": "^8.16.3",
    "puppeteer": "^24.34.0",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "redis": "^4.7.1",
    "sharp": "^0.33.1",
    "uuid": "^9.0.1",
    "whatsapp-web.js": "^1.34.4",
    "winston": "^3.19.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.11",
    "supertest": "^6.3.3",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.topactive.whatsapp",
    "productName": "Top Active WhatsApp",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "files": [
      "electron-main.js",
      "preload.js",
      "launcher.js",
      "server.js",
      "package.json",
      ".env",
      "services/**/*",
      "routes/**/*",
      "middleware/**/*",
      "config/**/*",
      "controllers/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "JT DEV NOCODE"
    }
  }
}
